.grey1-color {
  color: #374050;
}
.grey2-color {
  color: #91939c;
}
.page,
page {
  overflow: hidden;
  min-height: 100vh;
}
.line-block {
  padding: 0 24rpx;
  background: #ffffff;
}
.line-block .line {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 90rpx;
  border-bottom: 1px solid #f5f5f5;
}
.line-block .line text {
  font-size: 26rpx;
  color: #414959;
}
.line-block .line .red-price {
  color: #ea3a37;
}
.line-block.clear-block {
  margin-top: 20rpx;
  margin-bottom: 40rpx;
}
.bottom-btn-block {
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  z-index: 500;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  background: #ffffff;
}
.bottom-btn-block .pay-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 704rpx;
  height: 84rpx;
  color: #ffffff;
  font-size: 30rpx;
  background-image: linear-gradient(90deg, #6ccc4f, #60c669);
}
.textarea {
  margin: 0.5em;
  padding: 0.5em;
  text-indent: 1em;
  font-size: 24rpx;
  background: #f7f7f7;
  height: 6em;
  width: 90%;
  color: #bdbdbd;
  z-index: 1;
}
.file-list-block {
  padding: 15rpx 0;
  font-size: 0;
}
.file-list-block .item {
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  display: inline-block;
  position: relative;
  width: 220rpx;
  height: 220rpx;
  overflow: hidden;
}
.file-list-block .item:nth-child(3n) {
  margin-right: 0;
}
.file-list-block .upload-btn {
  position: relative;
  border: 1px solid #f0f0f0;
}
.file-list-block .upload-btn::after, .file-list-block .upload-btn::before {
  content: "";
  display: block;
  position: absolute;
  left: 50%;
  top: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
  border-radius: 10000rpx;
  background: #d8d8d8;
}
.file-list-block .upload-btn::after {
  width: 36rpx;
  height: 2px;
}
.file-list-block .upload-btn::before {
  height: 36rpx;
  width: 2px;
}
.file-list-block .show-image .image {
  width: 100%;
  height: 100%;
}
